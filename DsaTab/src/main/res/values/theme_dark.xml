<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="DsaTabTheme.Dark" parent="Base.DsaTabTheme.Dark">
    </style>

    <style name="Base.DsaTabTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <!--
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="alertDialogTheme">@style/AlertDialog.Dark</item>

        <!--  fix for showcaseview to no overlap bottom menu
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">false</item>
        -->
        <!--
         colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets
        -->

        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <item name="colorAccent">@color/accent_dark</item>

        <item name="android:textColorPrimary">@color/primary_text_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_dark</item>

        <!--
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        -->

        <item name="circleTint">@color/circle_tint_dark</item>
        <item name="circleColor">@color/circle_color_dark</item>
        <item name="circleViewStyle">@style/CircleViewStyle.Dark</item>
        <item name="circleButtonStyle">@style/CircleButtonStyle.Dark</item>

        <item name="android:dividerPadding">8dp</item>
        <item name="buttonStyle">?buttonStyleSmall</item>
        <item name="buttonStyleLeft">?buttonStyleSmall</item>
        <item name="buttonStyleRight">?buttonStyleSmall</item>
        <item name="android:soundEffectsEnabled">false</item>

        <item name="imgChainTop">@drawable/chain_top_dark</item>
        <item name="imgChainBottom">@drawable/chain_bottom_dark</item>        
        <item name="imgCharacter">@drawable/character_dark</item>
        <item name="imgEmpty">@drawable/empty_dark</item>

        <item name="imgSet">@drawable/dsa_set</item>
        <item name="imgSet1">@drawable/dsa_set1</item>
        <item name="imgSet2">@drawable/dsa_set2</item>
        <item name="imgSet3">@drawable/dsa_set3</item>
        <item name="imgBarSet">@drawable/dsa_set</item>
        <item name="imgBarSet1">@drawable/dsa_set1</item>
        <item name="imgBarSet2">@drawable/dsa_set2</item>
        <item name="imgBarSet3">@drawable/dsa_set3</item>

        <item name="listItemBackground">@drawable/list_background_dark</item>
        <item name="slidingPaneShadowBackground">@drawable/slider_shadow</item>

        <item name="floatingHintEditTextStyle">@style/FloatingHintEditText</item>
        <item name="floatingHintTextViewStyle">@style/FloatingHintTextView</item>

        <item name="floatingActionButtonStyle">@style/FloatingActionButton</item>
        <item name="floatingActionMenuStyle">@style/FloatingActionMenu</item>

        <item name="flipCheckBoxStyle">@style/FlipCheckBoxStyle.Dsa.Dark</item>
        <item name="flipFrontImageStyle">@style/FlipFrontImageStyle.Dark</item>
        <item name="flipRearImageStyle">@style/FlipRearImageStyle.Dark</item>

        <item name="cardViewStyle">@style/CardView.Dark</item>
    </style>

</resources>