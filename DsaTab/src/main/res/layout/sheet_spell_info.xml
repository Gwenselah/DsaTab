        </com.thebnich.floatinghintedittext.FloatingHintTextView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popup_spell_source_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/popup_spell_source_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_source"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_complexity"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_complexity">
        </com.thebnich.floatinghintedittext.FloatingHintTextView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popup_spell_complexity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/popup_spell_complexity_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_complexity"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/popup_spell_hero_values"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/label_character_specific_values">
        </TextView>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_comment"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_comment">
        </com.thebnich.floatinghintedittext.FloatingHintTextView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popup_spell_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/popup_spell_comment_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_comment"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_variant"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_variant">
        </com.thebnich.floatinghintedittext.FloatingHintTextView>

        <android.support.design.widget.TextInputLayout
