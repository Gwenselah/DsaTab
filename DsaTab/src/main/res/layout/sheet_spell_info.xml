<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">

    <LinearLayout
        android:id="@+id/popup_spell_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_gap"
        android:paddingRight="@dimen/default_gap">

        <TextView
            android:id="@+id/popup_spell_title"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="">
        </TextView>

        <NumberPicker
            android:id="@+id/popup_edit_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_castduration"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_cast_duration"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popup_spell_castduration_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/popup_spell_castduration_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_cast_duration"
                android:inputType="text"
                />

        </android.support.design.widget.TextInputLayout>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_probe"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_probe"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popup_spell_probe_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/popup_spell_probe_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_probe"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_costs"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_costs"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popup_spell_costs_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/popup_spell_costs_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_costs"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_target"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_target">
        </com.thebnich.floatinghintedittext.FloatingHintTextView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popup_spell_target_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/popup_spell_target_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_target"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_range"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_range">
        </com.thebnich.floatinghintedittext.FloatingHintTextView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popup_spell_range_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/popup_spell_range_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_range"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_effectduration"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_effect_duration">
        </com.thebnich.floatinghintedittext.FloatingHintTextView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popup_spell_effectduration_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/popup_spell_effectduration_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_effect_duration"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_effect"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_effect">
        </com.thebnich.floatinghintedittext.FloatingHintTextView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popup_spell_effect_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/popup_spell_effect_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_effect"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_merkmal"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_feature"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popup_spell_merkmal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/popup_spell_merkmal_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_feature"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <com.thebnich.floatinghintedittext.FloatingHintTextView
            android:id="@+id/popup_spell_representation"
            style="@style/TextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
