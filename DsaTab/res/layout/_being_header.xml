<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:guilib="http://schemas.android.com/apk/com.gandulf.guilib"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gen_portrait_container"
    android:layout_width="match_parent"    
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/gen_portrait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"        
        android:scaleType="centerCrop"
        android:adjustViewBounds="false"
        android:src="@drawable/profile_picture" >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner_scrim"
        android:layout_gravity="bottom"
        android:gravity="end"
        android:paddingBottom="8dp"
        android:paddingTop="42dp"
        android:animateLayoutChanges="true" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gen_portrait_small"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"            
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/gen_portrait_name"
            android:fontFamily="sans-serif-condensed"            
            android:paddingLeft="4dp"
            android:paddingRight="4dp"            
            android:textColor="@color/Brighter"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <ImageButton
            android:id="@+id/gen_portrait_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/dsa_info_dark" />

    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_scrim" />

</FrameLayout>