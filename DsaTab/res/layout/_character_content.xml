<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:guilib="http://schemas.android.com/apk/com.gandulf.guilib"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"    
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/gen_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/dropShadowBackground"
            android:columnCount="2"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/default_gap"
            android:paddingRight="@dimen/default_gap"
            android:useDefaultMargins="true" >

            <com.dsatab.view.FlexibleTextView
                android:id="@+id/gen_name"
                style="@style/TextValue.Small"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:ellipsize="middle"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/label_name" >
            </com.dsatab.view.FlexibleTextView>

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/gen_ausbildung"
                style="@style/TextValue.Small"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:ellipsize="middle"
                android:fontFamily="sans-serif-condensed"
                android:hint="@string/label_education"
                android:singleLine="true" >
            </com.thebnich.floatinghintedittext.FloatingHintTextView>

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/gen_titel"
                style="@style/TextValue.Small"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:ellipsize="middle"
                android:fontFamily="sans-serif-condensed"
                android:hint="@string/label_titel"
                android:singleLine="true" />

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/gen_stand"
                style="@style/TextValue.Small"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:ellipsize="middle"
                android:fontFamily="sans-serif-condensed"
                android:hint="@string/label_stand"
                android:singleLine="true" />

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/gen_rasse"
                style="@style/TextValue.Small"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:ellipsize="middle"
                android:hint="@string/label_rasse"
                android:singleLine="true" />

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/gen_kultur"
                style="@style/TextValue.Small"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:ellipsize="middle"
                android:hint="@string/label_kultur"
                android:singleLine="true" />

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/gen_gewicht"
                style="@style/TextValue.Small"
                android:layout_gravity="fill_horizontal"
                android:hint="@string/label_gewicht"
                android:singleLine="true" >
            </com.thebnich.floatinghintedittext.FloatingHintTextView>

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/gen_groesse"
                style="@style/TextValue.Small"
                android:layout_gravity="fill_horizontal"
                android:hint="@string/label_groesse"
                android:singleLine="true" >
            </com.thebnich.floatinghintedittext.FloatingHintTextView>

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/gen_haar_augen"
                style="@style/TextValue.Small"
                android:layout_gravity="fill_horizontal"
                android:hint="@string/label_haar_augen_farbe"
                android:singleLine="true" >
            </com.thebnich.floatinghintedittext.FloatingHintTextView>

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/gen_alter"
                style="@style/TextValue.Small"
                android:layout_gravity="fill_horizontal"
                android:ellipsize="middle"
                android:hint="@string/label_alter"
                android:singleLine="true" >
            </com.thebnich.floatinghintedittext.FloatingHintTextView>

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/gen_aussehen"
                style="@style/TextValue.Small"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:ellipsize="middle"
                android:hint="@string/label_aussehen"
                android:singleLine="true" >
            </com.thebnich.floatinghintedittext.FloatingHintTextView>

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/attr_st"
                style="@style/TextValue.Small"
                android:layout_gravity="fill_horizontal"
                android:ellipsize="none"
                android:hint="@string/label_st"
                android:singleLine="true" >
            </com.thebnich.floatinghintedittext.FloatingHintTextView>

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/attr_ws"
                style="@style/TextValue.Small"
                android:layout_gravity="fill_horizontal"
                android:ellipsize="none"
                android:hint="@string/label_ws"
                android:singleLine="true" >
            </com.thebnich.floatinghintedittext.FloatingHintTextView>

            <com.thebnich.floatinghintedittext.FloatingHintTextView
                android:id="@+id/attr_gs"
                style="@style/TextValue.Small"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:ellipsize="none"
                android:hint="@string/label_gs"
                android:singleLine="true" >
            </com.thebnich.floatinghintedittext.FloatingHintTextView>
        </GridLayout>

        <ImageButton
            android:id="@+id/details_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/default_gap"
            android:background="@null"
            android:minHeight="18dp"
            android:minWidth="18dp"
            android:scaleType="fitXY"
            android:src="?attr/imgExpanderClose" />
        
        <ImageButton
            android:id="@+id/details_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="@dimen/default_gap"
            android:background="@null"
            android:minHeight="18dp"
            android:minWidth="18dp"
            android:scaleType="fitXY"
            android:src="?attr/imgCancel" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/gen_attributes_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <TableLayout
