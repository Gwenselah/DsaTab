<?xml version="1.0" encoding="utf-8"?>
<com.dsatab.view.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/portrait_height_small"
    android:background="?attr/dropShadowBackground">

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:focusable="false"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_picture" >
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@android:id/text1"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tag1"
            style="@style/TextLabel.Mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/ValueGreenAlpha"
            android:duplicateParentState="false"
            android:focusable="false"
            android:padding="@dimen/default_gap"
            android:singleLine="true"
            android:textColor="@android:color/primary_text_dark" >
        </TextView>

        <TextView
            android:id="@+id/tag2"
            style="@style/TextLabel.Mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/ValueRedAlpha"
            android:duplicateParentState="false"
            android:focusable="false"
            android:padding="@dimen/default_gap"
            android:singleLine="true"
            android:textColor="@android:color/primary_text_dark" >
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/Darker"
        android:duplicateParentState="false"
        android:ellipsize="marquee"
        android:focusable="false"
        android:gravity="center_vertical|left"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="@dimen/default_gap"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/primary_text_dark" >
    </TextView>

    <TextView
        android:id="@android:id/text2"
        style="@style/TextLabel.Mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/ValueRedAlpha"
        android:duplicateParentState="false"
        android:focusable="false"
        android:padding="@dimen/default_gap"
        android:singleLine="true"
        android:textColor="@android:color/primary_text_dark" >
    </TextView>

</com.dsatab.view.CheckableRelativeLayout>