<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="true">

    <item android:state_pressed="true">
        <layer-list>
            <!-- White Top color -->
            <item android:top="5px" android:right="3dp" android:bottom="3dp" android:left="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="#222222" />
                    <corners  android:topRightRadius="14dp" android:bottomRightRadius="14dp" />
                    <stroke android:width="1px" android:color="#999999" />
                </shape>
			</item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Bottom 2dp Shadow -->
            <item android:top="3px" android:right="3dp" android:bottom="3dp" android:left="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="#666666" />
                    <corners  android:topRightRadius="14dp" android:bottomRightRadius="14dp" />
                </shape>
			</item>
            <!-- White Top color -->
            <item android:top="3px" android:right="3dp" android:bottom="5dp" android:left="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="#333333" />
                    <corners  android:topRightRadius="14dp" android:bottomRightRadius="14dp" />
                    <stroke android:width="1px" android:color="#999999" />
                </shape>
			</item>
        </layer-list>
	</item>

</selector>