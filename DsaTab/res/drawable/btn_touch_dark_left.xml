<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="true">

    <item android:state_pressed="true">
        <layer-list>
            <!-- White Top color -->
            <item android:top="4dp" android:right="0dp" android:bottom="3dp" android:left="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#222222" />
                    <corners android:topLeftRadius="14dp" android:bottomLeftRadius="14dp" />
                    <stroke android:width="1dp" android:color="#666666" />
                </shape>
			</item>
        </layer-list>
    </item>
    <item >
        <layer-list >
            <!-- Bottom 2dp Shadow -->
            <item android:top="3dp" android:right="0dp" android:bottom="3dp" android:left="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#444444" />
                    <corners android:topLeftRadius="14dp" android:bottomLeftRadius="14dp" />
                </shape>
			</item>
            <!-- White Top color -->
            <item android:top="3dp" android:right="0dp" android:bottom="4dp" android:left="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#222222" />
                    <corners android:topLeftRadius="14dp" android:bottomLeftRadius="14dp" />
                    <stroke android:width="1dp" android:color="#666666" />
                </shape>
			</item>
        </layer-list>
	</item>

</selector>