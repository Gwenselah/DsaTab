<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3px">
        <shape android:shape="rectangle" >
            <solid android:color="#d8d8d8" />

            <corners android:radius="14dp" />
        </shape>
    </item>
    <!-- White Top color -->
    <item
        android:bottom="5dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3px">
        <shape android:shape="rectangle" >
            <solid android:color="#F9F9F9" />

            <corners android:radius="14dp" />

            <padding
                android:left="6dp"
                android:right="6dp" />

            <stroke
                android:width="1px"
                android:color="#dddddd" />
        </shape>
    </item>

</layer-list>