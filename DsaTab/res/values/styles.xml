<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto">

    <style name="FlipCheckBoxStyle.Dsa" parent="FlipCheckBoxStyle">
        <item name="frontClickableBackgroundDrawable">@drawable/circle</item>
        <item name="android:tint">?attr/circleTint</item>
    </style>

    <style name="FlipCheckBoxStyle.Dsa.Dark" parent="FlipCheckBoxStyle.Dark">
        <item name="frontClickableBackgroundDrawable">@drawable/circle_dark</item>
        <item name="android:tint">?attr/circleTint</item>
    </style>

    <style name="AlertDialog.Light" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AlertDialog.Dark" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FloatingActionButton">
        <item name="fab_colorNormal">@color/accent</item>
        <item name="fab_colorPressed">@color/accent_dark</item>
        <item name="fab_progress_color">@color/accent_dark</item>
    </style>

    <style name="FloatingActionMenu">
        <item name="menu_colorNormal">@color/accent</item>
        <item name="menu_colorPressed">@color/accent_dark</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.IconView" parent="android:Widget">
        <item name="materialIconColor">#888888</item>
        <item name="materialIconSize">@dimen/icon_size</item>
        <item name="android:padding">@dimen/icon_padding</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="Widget.IconButton" parent="Widget.IconView">
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TextValue" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/default_gap</item>
    </style>

    <style name="TextValue.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextLabel" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/default_gap</item>
    </style>

    <style name="TextLabel.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextLabel.Mini">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">11sp</item>
        <!-- <item name="android:textAllCaps">true</item> -->
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">20dp</item>
    </style>

    <style name="TextLabel.Float">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/floatinghintedittext_hint_size</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">?android:attr/textColorHint</item>
    </style>

    <style name="CircleButtonStyle" parent="Widget.IconButton">
        <item name="android:background">@drawable/circle</item>
        <item name="android:tint">?attr/circleTint</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="CircleButtonStyle.Dark" parent="CircleButtonStyle">
        <item name="android:background">@drawable/circle_dark</item>
        <item name="android:tint">?attr/circleTint</item>
    </style>

    <style name="CircleViewStyle" parent="Widget.IconView">
        <item name="android:background">@drawable/circle</item>
        <item name="android:tint">?attr/circleTint</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="CircleViewStyle.Dark" parent="CircleViewStyle">
        <item name="android:background">@drawable/circle_dark</item>
        <item name="android:tint">?attr/circleTint</item>
    </style>

    <style name="NavigationView.Dark" parent="Widget.Design.NavigationView">
        <item name="android:itemTextAppearance">@drawable/color_item_text_color_dark</item>
        <item name="itemTextAppearance">@drawable/color_item_text_color_dark</item>
    </style>

    <style name="NavigationView" parent="Widget.Design.NavigationView">
        <item name="android:itemTextAppearance">@drawable/color_item_text_color</item>
        <item name="itemTextAppearance">@drawable/color_item_text_color</item>
    </style>

</resources>