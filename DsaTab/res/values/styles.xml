<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto">

    <style name="AlertDialog.Light" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AlertDialog.Dark" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_touch_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FloatingActionButton">
        <item name="fab_colorNormal">@color/accent</item>
        <item name="fab_colorPressed">@color/accent_dark</item>
        <item name="fab_progress_color">@color/accent_dark</item>
    </style>

    <style name="FloatingActionMenu">
        <item name="menu_colorNormal">@color/accent</item>
        <item name="menu_colorPressed">@color/accent_dark</item>
    </style>

    <style name="Widget.Button.Dark">
        <item name="android:background">@drawable/btn_touch_dark</item>
    </style>

    <style name="Widget.Button.Left">
        <item name="android:background">@drawable/btn_touch_light_left</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="Widget.Button.Left.Dark">
        <item name="android:background">@drawable/btn_touch_dark_left</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="Widget.Button.Right">
        <item name="android:background">@drawable/btn_touch_light_right</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="Widget.Button.Right.Dark">
        <item name="android:background">@drawable/btn_touch_dark_right</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="Widget.Button.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">20dp</item>
    </style>

    <style name="Widget.Button.Small.Dark">
        <item name="android:background">@drawable/btn_touch_small_dark</item>
    </style>

    <style name="TextValue" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/default_gap</item>
    </style>

    <style name="TextValue.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextLabel" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/default_gap</item>
    </style>

    <style name="TextLabel.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextLabel.Mini">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">11sp</item>
        <!-- <item name="android:textAllCaps">true</item> -->
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">20dp</item>
    </style>

    <style name="TextLabel.Float">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/floatinghintedittext_hint_size</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">?android:attr/textColorHint</item>
    </style>

</resources>